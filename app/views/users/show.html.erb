<% provide(:title, @user.name) %>
<h2>
  <%= gravatar_for @user %>
  <%= @user.name %><%= @user.email %>
</h2>

<div class="row">
  <aside>

  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>